def plus(a, b):
 try:
  return a + b
 except (TypeError, ValueError):
    return "надо использовать цифры"

def delenie(z, x):
 try:
  return z / x
 except (TypeError, ValueError, ZeroDivisionError):
   return "надо использовать цифры и делить на ноль нельзя"
   
print(plus(3, 6))
print(delenie(9, 0))
